# {{ ansible_managed }}

upstream archivematica_dashboard_backend {

    server {{ archivematica_src_am_dashboard_nginx_bind }};

}

server {

  listen 80;

  # Adjust to taste
  client_max_body_size 256M;

  server_name _;
    {% if archivematica_src_syslog_enabled|bool %}
    error_log syslog:server={{ archivematica_src_syslog_server }},tag=dashboard info;
    access_log syslog:server={{ archivematica_src_syslog_server }},tag=dashboard combined;
    {% endif %}

  location / {
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_redirect off;
    proxy_buffering off;
    proxy_read_timeout {{ archivematica_src_am_dashboard_nginx_proxy_read_timeout }};
    proxy_pass http://archivematica_dashboard_backend;
  }

}
